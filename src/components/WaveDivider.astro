---
/**
 * WaveDivider Component
 * Decorative SVG wave divider between sections
 * Reinforces lakeside theme with gentle wave shapes
 */

interface Props {
  /** Flip the wave vertically (for bottom-to-top transitions) */
  flip?: boolean;
  /** Color of the wave (defaults to honey-oak) */
  color?: string;
  /** Optional CSS class */
  class?: string;
}

const {
  flip = false,
  color = 'var(--honey-oak)',
  class: className = ''
} = Astro.props;
---

<div
  class:list={['wave-divider', { 'wave-divider--flipped': flip }, className]}
  aria-hidden="true"
>
  <svg
    viewBox="0 0 1440 48"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    preserveAspectRatio="none"
  >
    <path
      d="M0 48V24C120 8 240 0 360 8C480 16 600 40 720 40C840 40 960 16 1080 8C1200 0 1320 8 1440 24V48H0Z"
      fill={color}
      fill-opacity="0.12"
    />
    <path
      d="M0 48V32C180 16 360 8 540 16C720 24 900 40 1080 36C1260 32 1380 24 1440 32V48H0Z"
      fill={color}
      fill-opacity="0.08"
    />
  </svg>
</div>

<style>
  .wave-divider {
    width: 100%;
    height: 32px;
    overflow: hidden;
    line-height: 0;
    position: relative;
    z-index: 1;
  }

  .wave-divider svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  .wave-divider--flipped {
    transform: scaleY(-1);
  }

  @media (min-width: 768px) {
    .wave-divider {
      height: 48px;
    }
  }

  @media (min-width: 1024px) {
    .wave-divider {
      height: 64px;
    }
  }
</style>
