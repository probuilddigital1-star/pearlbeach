---
const currentPath = Astro.url.pathname;
---

<header id="main-header" class="bg-warm-cream sticky top-0 z-50 transition-shadow duration-300" style="box-shadow: 0 1px 12px rgba(139, 115, 85, 0.1);">
  <nav class="container-custom py-3 md:py-4" aria-label="Main navigation">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="block transition-all duration-300 hover:opacity-85" aria-label="Pearl Beach Cottages - Home">
        <img
          src="/images/logo-emblem.png"
          alt="Pearl Beach Cottages"
          class="h-[4.5rem] sm:h-20 md:h-24 w-auto transition-transform duration-300 hover:scale-[1.02]"
          loading="eager"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a
          href="/"
          class:list={[
            "font-medium transition-colors duration-200 hover:text-forest-sage",
            currentPath === '/' ? 'text-forest-sage' : 'text-pine-dark'
          ]}
          style="font-size: 15px; font-weight: 500;"
          aria-current={currentPath === '/' ? 'page' : undefined}
        >
          Home
        </a>
        <a
          href="/cottages"
          class:list={[
            "font-medium transition-colors duration-200 hover:text-forest-sage",
            currentPath.startsWith('/cottages') ? 'text-forest-sage' : 'text-pine-dark'
          ]}
          style="font-size: 15px; font-weight: 500;"
          aria-current={currentPath.startsWith('/cottages') ? 'page' : undefined}
        >
          Our Cottages
        </a>
        <a
          href="/amenities"
          class:list={[
            "font-medium transition-colors duration-200 hover:text-forest-sage",
            currentPath === '/amenities' ? 'text-forest-sage' : 'text-pine-dark'
          ]}
          style="font-size: 15px; font-weight: 500;"
          aria-current={currentPath === '/amenities' ? 'page' : undefined}
        >
          Amenities
        </a>
        <a
          href="/location"
          class:list={[
            "font-medium transition-colors duration-200 hover:text-forest-sage",
            currentPath === '/location' ? 'text-forest-sage' : 'text-pine-dark'
          ]}
          style="font-size: 15px; font-weight: 500;"
          aria-current={currentPath === '/location' ? 'page' : undefined}
        >
          Location
        </a>
        <a
          href="/reviews"
          class:list={[
            "font-medium transition-colors duration-200 hover:text-forest-sage",
            currentPath === '/reviews' ? 'text-forest-sage' : 'text-pine-dark'
          ]}
          style="font-size: 15px; font-weight: 500;"
          aria-current={currentPath === '/reviews' ? 'page' : undefined}
        >
          Reviews
        </a>
        <a
          href="/contact"
          class:list={[
            "font-medium transition-colors duration-200 hover:text-forest-sage",
            currentPath === '/contact' ? 'text-forest-sage' : 'text-pine-dark'
          ]}
          style="font-size: 15px; font-weight: 500;"
          aria-current={currentPath === '/contact' ? 'page' : undefined}
        >
          Contact
        </a>
        <a href="/cottages" class="btn-primary">
          Book Now
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-pine-dark hover:text-forest-sage transition-colors duration-200"
        aria-label="Open navigation menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

  </nav>

  <!-- Mobile Menu Backdrop -->
  <div
    id="mobile-menu-backdrop"
    class="fixed inset-0 bg-black/50 backdrop-blur-sm z-40 opacity-0 pointer-events-none transition-opacity duration-300 md:hidden"
  ></div>

  <!-- Mobile Navigation Slide-in Panel -->
  <div
    id="mobile-menu"
    class="fixed top-0 right-0 h-full w-80 max-w-[85vw] bg-white z-50 transform translate-x-full transition-transform duration-300 ease-out md:hidden"
    style="box-shadow: 0 8px 24px rgba(0,0,0,0.12);"
    role="dialog"
    aria-modal="true"
    aria-label="Mobile navigation menu"
  >
    <div class="flex flex-col h-full">
      <!-- Mobile Menu Header -->
      <div class="flex items-center justify-between p-5" style="border-bottom: 1px solid rgba(0,0,0,0.08);">
        <a href="/" aria-label="Pearl Beach Cottages - Home">
          <img src="/images/logo-emblem.png" alt="Pearl Beach Cottages" class="h-16 w-auto" />
        </a>
        <button
          id="mobile-menu-close"
          class="p-2 text-pine-dark hover:text-forest-sage transition-colors duration-200"
          aria-label="Close navigation menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Mobile Menu Links -->
      <nav class="flex-1 overflow-y-auto p-6" aria-label="Mobile navigation">
        <div class="flex flex-col space-y-2">
          <a
            href="/"
            class="px-4 py-3 font-medium text-pine-dark hover:text-forest-sage transition-colors duration-200"
            aria-current={currentPath === '/' ? 'page' : undefined}
          >
            Home
          </a>
          <a
            href="/cottages"
            class="px-4 py-3 font-medium text-pine-dark hover:text-forest-sage transition-colors duration-200"
            aria-current={currentPath.startsWith('/cottages') ? 'page' : undefined}
          >
            Our Cottages
          </a>
          <a
            href="/amenities"
            class="px-4 py-3 font-medium text-pine-dark hover:text-forest-sage transition-colors duration-200"
            aria-current={currentPath === '/amenities' ? 'page' : undefined}
          >
            Amenities
          </a>
          <a
            href="/location"
            class="px-4 py-3 font-medium text-pine-dark hover:text-forest-sage transition-colors duration-200"
            aria-current={currentPath === '/location' ? 'page' : undefined}
          >
            Location
          </a>
          <a
            href="/reviews"
            class="px-4 py-3 font-medium text-pine-dark hover:text-forest-sage transition-colors duration-200"
            aria-current={currentPath === '/reviews' ? 'page' : undefined}
          >
            Reviews
          </a>
          <a
            href="/contact"
            class="px-4 py-3 font-medium text-pine-dark hover:text-forest-sage transition-colors duration-200"
            aria-current={currentPath === '/contact' ? 'page' : undefined}
          >
            Contact
          </a>
        </div>

        <!-- Mobile CTA Button -->
        <div class="mt-6">
          <a href="/cottages" class="btn-primary w-full text-center">
            Book Now
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>

<!-- Mobile menu and header scroll scripts -->
<script>
  import '../scripts/mobileMenu';
</script>
